{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp", "h", "hpp"],
      "rootPatterns": [".ccls", "compile_commands.json"],
      "initializationOptions": {
          "clang": {
              "resourceDir": "/usr/lib/llvm-8/lib/clang/8.0.0"
          },
          "index": {
              "initialBlacklist": [],
              "threads": 4,
              "comments": 0
          },
        "cache": {
          "directory": ".ccls-cache",
          "hierarchicalPath": true
        },
        "client": {
          "snippetSupport": true
        }
      }
    }
  },
  "http.proxy": "127.0.0.1:3128",
  "metals.serverProperties": ["-Dhttps.proxyHost=127.0.0.1", "-Dhttps.proxyPort=3128"],
  "metals.mavenScript": "/usr/bin/mvn -s /home/vaya/.m2/settings.xml"
}
